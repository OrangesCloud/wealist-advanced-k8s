# Video Service Secret Template
# Copy this file to secret.yaml and fill in the actual values
apiVersion: v1
kind: Secret
metadata:
  name: video-service-secret
type: Opaque
stringData:
  # Database connection URL (includes credentials)
  DATABASE_URL: "postgresql://<DB_USER>:<DB_PASSWORD>@postgres.wealist-infra.svc.cluster.local:5432/wealist_video_db?sslmode=disable"
  # JWT secret key
  SECRET_KEY: "<JWT_SECRET_MIN_32_CHARS>"
  # Redis password
  REDIS_PASSWORD: "<REDIS_PASSWORD>"
  # LiveKit credentials
  LIVEKIT_API_KEY: "<LIVEKIT_API_KEY>"
  LIVEKIT_API_SECRET: "<LIVEKIT_API_SECRET>"
