# Builder stage
FROM golang:1.25-bookworm AS builder 

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends git ca-certificates tzdata && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# ğŸ’¡ [í•„ìˆ˜] ì¢…ì†ì„± ì •ë¦¬: go.modì— ëª…ì‹œëœ ë²„ì „ì— ë§ì¶° ëª¨ë“ˆì„ ì •ë¦¬í•˜ê³ , ëˆ„ë½ëœ ì˜ì¡´ì„±ì„ í™•ë³´í•©ë‹ˆë‹¤.
RUN go mod tidy

# Copy source code
COPY . .

# Build the application
# ğŸš¨ [ìµœì¢… ìˆ˜ì •] -mod=readonly ëŒ€ì‹  -mod=modë¥¼ ì‚¬ìš©í•˜ì—¬ ë¹Œë“œ ì‹œ ì¢…ì†ì„± ê·¸ë˜í”„ë¥¼ ë‹¤ì‹œ í™•ì¸í•˜ë„ë¡ ê°•ì œí•©ë‹ˆë‹¤.
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -mod=mod -ldflags="-w -s" -o board-api ./cmd/api

# Runtime stage
FROM alpine:latest

# Install runtime dependencies
# ëŸ°íƒ€ì„ì€ ê³„ì† ê°€ë²¼ìš´ Alpineì„ ì‚¬ìš©í•  ìˆ˜ ìˆìŠµë‹ˆë‹¤.
RUN apk --no-cache add ca-certificates tzdata wget

# Create non-root user
RUN addgroup -g 1000 appuser && \
    adduser -D -u 1000 -G appuser appuser

# Set working directory
WORKDIR /home/appuser

# Copy binary from builder
COPY --from=builder --chown=appuser:appuser /app/board-api .

# Copy configuration files
COPY --from=builder --chown=appuser:appuser /app/configs ./configs

# Switch to non-root user
USER appuser

# Expose port
EXPOSE 8000

# Health check - liveness probe
# /health: DB ì—°ê²°ê³¼ ë¬´ê´€í•˜ê²Œ ì„œë¹„ìŠ¤ ìì²´ ìƒíƒœë§Œ ì²´í¬ (EKSì—ì„œ pod ìƒì¡´ ë³´ì¥)
# readinessëŠ” /ready ì—”ë“œí¬ì¸íŠ¸ë¡œ ë³„ë„ í™•ì¸ ê°€ëŠ¥
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:8000/health || exit 1

# Run the application
CMD ["./board-api"]