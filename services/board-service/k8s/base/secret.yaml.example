# Board Service Secret Template
# Copy this file to secret.yaml and fill in the actual values
apiVersion: v1
kind: Secret
metadata:
  name: board-service-secret
type: Opaque
stringData:
  # Database
  DB_USER: "<DB_USERNAME>"
  DB_PASSWORD: "<DB_PASSWORD>"
  # JWT (user-service와 동일한 값 사용)
  JWT_SECRET: "<JWT_SECRET_MIN_32_CHARS>"
  # Redis URL (includes password)
  REDIS_URL: "redis://:<REDIS_PASSWORD>@redis.wealist-infra.svc.cluster.local:6379/0"
  REDIS_PASSWORD: "<REDIS_PASSWORD>"
  # S3/MinIO 자격증명 (Local에서 MinIO용, Prod에서는 IAM Role 사용)
  S3_ACCESS_KEY: "<S3_ACCESS_KEY>"
  S3_SECRET_KEY: "<S3_SECRET_KEY>"
