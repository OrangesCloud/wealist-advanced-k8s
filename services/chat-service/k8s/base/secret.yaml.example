# Chat Service Secret Template
# Copy this file to secret.yaml and fill in the actual values
apiVersion: v1
kind: Secret
metadata:
  name: chat-service-secret
type: Opaque
stringData:
  # Database connection URL (includes credentials)
  DATABASE_URL: "postgresql://<DB_USER>:<DB_PASSWORD>@postgres.wealist-infra.svc.cluster.local:5432/wealist_chat_db?sslmode=disable"
  # Redis password
  REDIS_PASSWORD: "<REDIS_PASSWORD>"
  # JWT secret key
  SECRET_KEY: "<JWT_SECRET_MIN_32_CHARS>"
