# =============================================================================
# Shared Secret - 모든 서비스가 공유하는 민감한 설정
# =============================================================================
# 사용법:
#   1. 이 파일을 secret-shared.yaml로 복사
#   2. <YOUR_*> 값들을 실제 값으로 변경
#   3. secret-shared.yaml은 .gitignore에 포함되어 있음
#
# cp secret-shared.yaml.example secret-shared.yaml
# vim secret-shared.yaml

apiVersion: v1
kind: Secret
metadata:
  name: wealist-shared-secrets
  labels:
    app.kubernetes.io/name: wealist
    app.kubernetes.io/component: shared-secrets
type: Opaque
stringData:
  # ===========================================================================
  # JWT & Auth
  # ===========================================================================
  JWT_SECRET: "local-dev-jwt-secret-key-must-be-at-least-64-characters-long-for-hs512-algorithm"
  SECRET_KEY: "local-dev-jwt-secret-key-must-be-at-least-64-characters-long-for-hs512-algorithm"


  # ===========================================================================
  # Database Credentials
  # ===========================================================================
  DB_PASSWORD: "<YOUR_DB_PASSWORD>"
  POSTGRES_PASSWORD: "<YOUR_POSTGRES_PASSWORD>"

  # ===========================================================================
  # Redis
  # ===========================================================================
  REDIS_PASSWORD: "<YOUR_REDIS_PASSWORD>"

  # ===========================================================================
  # MinIO (S3 호환)
  # ===========================================================================
  S3_ACCESS_KEY: "<YOUR_S3_ACCESS_KEY>"
  S3_SECRET_KEY: "<YOUR_S3_SECRET_KEY>"

  # ===========================================================================
  # Internal API Key (서비스 간 인증)
  # ===========================================================================
  INTERNAL_API_KEY: "<YOUR_INTERNAL_API_KEY>"
