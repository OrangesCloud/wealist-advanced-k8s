# =============================================================================
# weAlist Project - EC2 Dev Environment Variables (Template)
# =============================================================================
# EC2 단일 인스턴스 Dev 환경 모방용 설정 파일입니다.
# 
# 사용 전 필수 작업:
#   1. cp .env.ec2-dev.example .env.ec2-dev
#   2. ⭐ YOUR_..._HERE 및 CHANGE_THIS... 값을 반드시 채워야 합니다!
#   3. 이 파일은 Git에 커밋하지 않습니다.
# =============================================================================

# =============================================================================
# Application Configuration & Profile
# =============================================================================
APP_NAME=wealist-api-ec2-dev
USER_SERVICE_VERSION=latest # 이미지 버전을 직접 명시하셔야 합니다 !!!
BOARD_SERVICE_VERSION=latest # 이미지 버전을 직접 명시하셔야 합니다 !!!
CACHEBUST=1

SPRING_PROFILES_ACTIVE=aws
# 🚨 [필수 입력] ECR 이미지 참조에 사용되는 12자리 계정 ID
AWS_ACCOUNT_ID=YOUR_AWS_ACCOUNT_ID_HERE
AWS_REGION=ap-northeast-2

# =============================================================================
# Database Configuration - PostgreSQL
# =============================================================================
POSTGRES_SUPERUSER=postgres
POSTGRES_SUPERUSER_PASSWORD=YOUR_POSTGRES_SUPERUSER_PASSWORD_HERE

USER_DB_NAME=wealist_user_db
USER_DB_USER=wealist_user
USER_DB_PASSWORD=YOUR_USER_DB_PASSWORD_HERE

BOARD_DB_NAME=wealist_board_db
BOARD_DB_USER=board_service
BOARD_DB_PASSWORD=YOUR_BOARD_DB_PASSWORD_HERE

POSTGRES_HOST_PORT=5432

# =============================================================================
# Cache Configuration - Redis
# =============================================================================
REDIS_PASSWORD=YOUR_REDIS_PASSWORD_HERE
REDIS_HOST_PORT=6379

# =============================================================================
# OAuth / Domain Configuration (SSM Parameter Store 대체 값)
# =============================================================================
OAUTH2_CLIENT_REDIRECT_BASE=https://api.wealist.co.kr
OAUTH2_REDIRECT_URL_ENV=https://wealist.co.kr/oauth/callback
VITE_API_BASE_URL=https://api.wealist.co.kr

# =============================================================================
# Service URLs - Inter-service communication
# =============================================================================
# Docker 내부 네트워크 기준 컨테이너 간 통신 URL
USER_SERVICE_URL=http://user-service:8080
BOARD_SERVICE_URL=http://board-service:8000

# =============================================================================
# Sample Data Configuration
# =============================================================================
# EC2 Dev 환경에서는 샘플 데이터 생성 활성화 (선택사항)
SAMPLE_DATA_ENABLED=true

# =============================================================================
# JWT Configuration
# =============================================================================
JWT_SECRET=YOUR_JWT_SECRET_KEY_HERE_AT_LEAST_64_BYTES
JWT_ACCESS_TOKEN_EXPIRATION_MS=1800000
JWT_REFRESH_TOKEN_EXPIRATION_MS=604800000

# =============================================================================
# OAuth2 Client Configuration
# =============================================================================
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_HERE

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=*

# =============================================================================
# Monitoring Configuration
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
REDIS_EXPORTER_PORT=9121
POSTGRES_EXPORTER_PORT=9187
NODE_EXPORTER_PORT=9100

# =============================================================================
# JPA/Hibernate Configuration
# =============================================================================
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true
JPA_FORMAT_SQL=true
JPA_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# =============================================================================
# Service Ports & Logging
# =============================================================================
USER_HOST_PORT=8080
BOARD_HOST_PORT=8000
BOARD_SERVER_PORT=8000
LOG_LEVEL=debug